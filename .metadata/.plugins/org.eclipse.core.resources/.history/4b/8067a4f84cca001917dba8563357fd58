package test.programming;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class NumberToWordConvertor {

    private static final Object SPACE = " ";
	private static final Object AND = "and";




	public static void main(String[] args) {
        String word = new NumberToWordConvertor().identifyWord(320);
        System.out.println("identifyWord :: "+word);
    }
    
    


    String displayWord(int num) {
    	Map<String,Integer> britishNums = new HashMap<>();
    	int tempNum = num;
		if(tempNum >= 1000000) {
			tempNum = num/1000000;
			britishNums.put("million", num/1000000);	
		}
		if(tempNum >= 1000) {
			tempNum = num/1000;
			britishNums.put("thousand", tempNum);
		}
		String word3 = identifyWord(tempNum);
		return null;
	}




	public String identifyWord(int num) {
		StringBuilder numberToWord = new StringBuilder();
		if(num >= 100) {
			numberToWord.append(getWord(num/100)).append(SPACE).append("hundred");
			num = num%100;
			if(num != 0) {
				numberToWord.append(SPACE).append(AND).append(SPACE);
			}
		}
		if(num%10 != 0 && num > 9) {
			numberToWord.append(getWord(num - num%10)).append(SPACE);
			num = num%10;
			numberToWord.append(getWord(num));
		}
		else {
			numberToWord.append(getWord(num));
		}
		
		return numberToWord.toString();
	}




	String getWord(int num) {

        switch (num) {
        	case 0:
        		return "";
            case 1:
                return "one";
            case 2:
                return "two";
            case 3:
                return "three";
            case 4:
                return "four";
            case 5:
                return "five";
            case 6:
                return "six";
            case 7:
                return "seven";
            case 8:
                return "eight";
            case 9:
                return "nine";
            case 10:
                return "ten";
            case 11:
                return "eleven";
            case 12:
                return "twelve";
            case 13:
                return "thirteen";
            case 14:
                return "fourteen";
            case 15:
                return "fifteen";
            case 16:
                return "sixteen";
            case 17:
                return "seventeen";
            case 18:
                return "eighteen";
            case 19:
                return "nineteen";
            case 20:
                return "twenty";
            case 30:
                return "thirty";
            case 40:
                return "forty";
            case 50:
                return "fifty";
            case 60:
                return "sixty";
            case 70:
                return "seventy";
            case 80:
                return "eighty";
            case 90:
                return "ninety";
            case 100:
                return "hundred";
            case 1000:
                return "thousand";
            case 1000000:
                return "million";
            default: 
            	return "Unknown";
        }

    }
}
